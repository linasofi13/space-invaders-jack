    method void generateAliens(){
        var int x, y, i;
        let x = 100;    // x-pos of the first alien
        let y = 20;     // y-pos of the first alien
        let i = 0;
        let aliens = LinkedList.new();
        while(i < totalAliens){
            do aliens.add(Alien.new(x, y,i));
            let x = x + 57;
            let i = i + 1;
            if (i = 5){
                let y = y + 25;
                let x = 100;
            }
            if (i = 10){
                let y = y + 25;
                let x = 100;
            }
            if(i = 15){
                let y = y + 25;
                let x = 100;
            }
            if(i = 20){
                let y = y + 25;
                let x = 100;
            }
        }
    
        return;
    }
   
    method void dispose() {
        do player.dispose();
        do Memory.deAlloc(this);
        return;
    }

