    /*We move the aliens with 
    the alien movement method 
    one by one until we reach 
    the top of the screen and 
    change the direction of each alien.*/
    method void moveAlien(){
        var int i,j;
        var Alien currentAlien,AlienChangeDirection;
        let i = 0;
        let j = 0;
        while(i < totalAliens){
            let currentAlien = aliens[i];
            if(currentAlien.getX() > 450){
                while (j < totalAliens){
                    let AlienChangeDirection = aliens[j];
                    do AlienChangeDirection.changeDirection();
                    let j = j + 1;
                }
            }if (currentAlien.getX() < 15){
                while (j < totalAliens){
                    let AlienChangeDirection = aliens[j];
                    do AlienChangeDirection.changeDirection();
                    let j = j + 1;
                }
            }
            do currentAlien.movement();
            let i = i + 1;
        }
        return;
    }


    method void shootPathPlayer (Shoot shoot){
        if (shoot.getY() < 11){
            let playerShootsFlag = 0;
			do shoot.dispose();
        }
        return;

	}

    method void shootPathAlien (Shoot shoot){
        if (shoot.getY() > 243){
            let alienShootsFlag = 0;
			do shoot.dispose();
        }
		return;
    }

    method Alien newShooter(){
        return aliens[Random.randRange(25)];
    }



    method void run() {
        var char tecla;
        var boolean exit;
        var Shoot playerShoots; 
        var Shoot alienShoots;  
        var Alien devuelta;  //This is the alien that is shooting at this moment 
        do Random.setSeed(0);
        let exit = false;
        let devuelta = newShooter();

        while (~exit){
            while (tecla = 0) {
                if (playerShootsFlag = 1){
                    let playerShoots = player.getShoot();
                    do playerShoots.shoot(1); //1 is for player 2 is for aliens 
                    do shootPathPlayer(playerShoots);
                }
                if (alienShootsFlag = 0){
                    do devuelta.createShoot();
                    do Random.setSeed(0);
                    //let devuelta = newShooter();
                    let alienShootsFlag = 1;
                }
                if (alienShootsFlag = 1 ){
                    let alienShoots = devuelta.getShoot();
                    do alienShoots.shoot(2);    //1 is for player 2 is for aliens 
                    do shootPathAlien(alienShoots);
                }
                
                let tecla = Keyboard.keyPressed();
                do moveAlien(); 
            }

            if (tecla = 81) {  //Q  QUIT
                let exit = true;
            }

            if ((playerShootsFlag = 0) & (tecla = 32) ){ 
                do player.createShoot();
                let playerShootsFlag = 1;
            }
           

            while (~(tecla = 0)) {
                let tecla = Keyboard.keyPressed();
                do moveAlien(); 
                do player.movement(tecla); 
                if (playerShootsFlag = 1){
                    let playerShoots = player.getShoot();
                    do playerShoots.shoot(1); //1 is for player 2 is for aliens 
                    do shootPathPlayer(playerShoots);
                }
                if (alienShootsFlag = 0){
                    do devuelta.createShoot();
                    do Random.setSeed(2);
                    //let devuelta = newShooter();
                    let alienShootsFlag = 1;
                }

                if (alienShootsFlag = 1 ){
                    let alienShoots = devuelta.getShoot();
                    do alienShoots.shoot(2); //1 is for player 2 is for aliens 
                    do shootPathAlien(alienShoots);
                }
            }
        }
        return;
    }
